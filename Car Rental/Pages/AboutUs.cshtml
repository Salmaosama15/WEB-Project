@page
@model Car_Rental.Pages.AboutUsModel
@{
    ViewData["Title"] = "About us - Car Rental";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <link rel="stylesheet" href="~/css/AboutUs.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-black">
        <div class="container">
            <a class="navbar-brand text-white fw-bold d-flex align-items-center" href="/">
                <img src="~/images/logos/yellow.jpg" alt="XRent Logo" style="width: 85px; height: 70px; margin-right: 8px;" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/Signup">Sign Up</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/AboutUs">About Us</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link text-white dropdown-toggle" role="button" data-bs-toggle="dropdown">Cars</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-page="/carspage">Main page</a></li>
                            <li><a class="dropdown-item" asp-page="/SedanCars">Sedan</a></li>
                            <li><a class="dropdown-item" asp-page="/SUVCars">SUV</a></li>
                            <li><a class="dropdown-item" asp-page="/LuxuryCars">Luxury</a></li>
                            <li><a class="dropdown-item" asp-page="/EconomyCars">Economy</a></li>
                            <li><a class="dropdown-item" asp-page="/4X4Cars">4X4</a></li>
                        </ul>
                    </li>
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/Contact">Contact Us</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/Privacy">Privacy</a></li>
                </ul>
            </div>
        </div>
    </nav>
   

    <div class="container-fluid" style="height: 55px;background-color:black;">
        <h2 style="color: white; background-color: black; text-align:center; font-family:'Times New Roman', Times, serif,">
            About Us
        </h2>
    </div>

   
    <div class="container-fluid" style="height: 300px; background-color: black">
        <div class="row">
            <div class="container col-8">
                <div class="container" style="margin-top: 40px;">
                    <h2 >
                        Our Vision 
                    </h2>
                </div>
                <p>
                  
                        Our vision is to revolutionize the car rental industry in Egypt and expand our reach to a global audience. We aim to provide unparalleled convenience with a diverse fleet of vehicles, catering to every need—from compact cars for city commutes to luxury vehicles for special occasions and SUVs for adventurous journeys. Our commitment to excellence is powered by a strong sense of teamwork, where every member contributes to delivering exceptional service and seamless experiences. By combining local expertise with international standards, we aspire to become a worldwide leader, bringing our unique blend of quality, reliability, and innovation to customers around the globe.
                   
                </p>
            </div>

            <div class="container col-4 padding-bottom: 50px;">
                <video autoplay loop muted src="/videos/speed.mp4" width="400" height="270"
                       style="margin-left: 40px; margin-bottom: 0px;"></video>
            </div>
        </div>
    </div>
    
  
    <div class="container-fluid" style="height: 300px; background-color: rgb(44,43,43);  padding-bottom:30px;">
        <h1 style="text-align: center";>
             Meet our Founders
        </h1>
        <div class="container" style="margin-left: 120px;">
            <div class="row">
                <div class="container col-3">
                    <img src="/images/photos/IMG-20241209-WA0015.jpg" alt="sara">
                    <h4 style="text-align: center; font-family:Cambria, Cochin, Georgia, Times, 'Times New Roman', serif">
                        <em>Sara</em>
                    </h4>
                </div>

                <div class="container col-3">
                    <img src="/images/photos/IMG.jpg" alt="salma">
                    <h4 style="text-align:center;">
                        <em>Salma</em>
                    </h4>
                </div>

                <div class="container col-3">
                    <img src="/images/photos/IMG-20241209-WA0013.jpg" alt="maryam">
                    <h4 style="text-align: center;">
                        <em>Maryam</em>
                    </h4>
                </div>

                <div class="container col-3">
                    <img src="/images/photos/IMG-20241209-WA0014.jpg" alt="mohamed">
                    <h4 style="text-align: center;">
                        <em>Mohamed</em>
                    </h4>
                </div>
            </div>
        </div>
    </div>
  
    <div class="container-fluid" style="height: 300px; background-color: black">
        <div class="row">
            <div class="container ">
                <h2 style="padding-top:15px; padding-left:10px;">
                    Our Start</h2>
                <p>
                   
                        The journey of our car rental company began in the heart of Egypt, driven by a vision to make travel easy and accessible. Founded by passionate entrepreneurs, the company started with a small fleet, offering everything from compact cars for city drives to SUVs for rugged adventures. Inspired by Egypt’s rich culture and growing demand for reliable transportation, the team focused on providing exceptional service and meeting diverse customer needs. Overcoming early challenges, the company quickly became a trusted name, symbolizing convenience and quality in the region.Overcoming early challenges with determination and creativity, the company quickly earned a reputation for reliability and outstanding customer care. Today, it stands as a proud symbol of Egypt's growing entrepreneurial spirit, providing a seamless travel experience that reflects the resilience and hospitality of the Egyptian people.
                   
                </p>
            </div>

        </div>
    </div>
  
    <br />
    <section class="footer" style="background-color: black;">
        <div class="row">
            <div class="footer-content col-3">
                <img src="~/images/logos/yellow.jpg" width="85" height="70" alt="logo" style="margin-left: 100px; margin-top: 20px;">
            </div>
            <div class="footer-content col-3">
                <div class="icons">
                    <h4 style="color: azure;">Reach Us</h4>
                    <a href="https://www.facebook.com" class="icon facebook" style="display: block; margin-bottom: 10px;">
                        <i class='bx bxl-facebook-circle'></i>
                    </a>
                    <a href="https://www.telegram.com" class="icon telegram" style="display: block; margin-bottom: 10px;">
                        <i class='bx bxl-telegram'></i>
                    </a>
                    <a href="https://www.instagram.com" class="icon instagram" style="display: block; margin-bottom: 10px;">
                        <i class='bx bxl-instagram'></i>
                    </a>
                    <a href="https://www.truecaller.com" class="icon phone" style="display: block; margin-bottom: 10px;">
                        <i class='bx bxs-phone-call'></i>
                    </a>
                </div>
            </div>
            <div class="footer-content col-3">
                <h4 style="color: azure"> Car Models </h4>
                <li style="list-style-type: none;"><a asp-page="/SedanCars">Sedan</a></li>
                <li style="list-style-type: none;"><a asp-page="/SUVCars">SUV's</a></li>
                <li style="list-style-type: none;"><a asp-page="/Luxury">Luxury</a></li>
                <li style="list-style-type: none;"><a asp-page="/Economy">Economy</a></li>
                <li style="list-style-type: none;"><a asp-page="/4X4">4X4</a></li>
            </div>
        </div>
    </section>
    
</body>
</html>

