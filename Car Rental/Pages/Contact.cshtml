@page
@model ContactModel
@{
    ViewData["Title"] = "Contact Us - Car Rental";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="css/index.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/yourcode.js" crossorigin="anonymous"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-black">
        <div class="container">
            <a class="navbar-brand text-white fw-bold d-flex align-items-center" href="/">
                <img src="~/images/logos/yellow.jpg" alt="XRent Logo" style="width: 85px; height: 70px; margin-right: 8px;" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/Signup">Sign Up</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/AboutUs">About Us</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link text-white dropdown-toggle" role="button" data-bs-toggle="dropdown">Cars</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-page="/carspage">Main page</a></li>
                            <li><a class="dropdown-item" asp-page="/SedanCars">Sedan</a></li>
                            <li><a class="dropdown-item" asp-page="/SUVCars">SUV</a></li>
                            <li><a class="dropdown-item" asp-page="/LuxuryCars">Luxury</a></li>
                            <li><a class="dropdown-item" asp-page="/EconomyCars">Economy</a></li>
                            <li><a class="dropdown-item" asp-page="/4X4Cars">4X4</a></li>
                        </ul>
                    </li>
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/Contact">Contact Us</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/Privacy">Privacy</a></li>
                </ul>
            </div>
        </div>
    </nav>
   

<div class="container my-5">
    <div class="row g-4">
      
        <div class="col-md-6">
            <h1 class="mb-3">Let's Collaborate!</h1>
            <p>Our team is always available to assist you. Fill in the form below and we’ll get back to you soon.</p>

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger">
                        @Model.ErrorMessage
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                {
                    <div class="alert alert-success">
                        @Model.SuccessMessage
                    </div>
                }
                <script>
                   
                     {
                        const alert = document.querySelector('.alert-success');
                        if (alert) {
                            alert.style.display = 'none';
                        }
                    }, 5000);
                </script>



            <div class="contact-form">
                <form method="post">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" id="name" class="form-control" asp-for="Contact.Name" placeholder="Your Name" required />
                        <span asp-validation-for="Contact.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Phone Number</label>
                        <input type="tel" id="phone" class="form-control" asp-for="Contact.Phone" placeholder="Your Phone Number" required />
                        <span asp-validation-for="Contact.Phone" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" id="email" class="form-control" asp-for="Contact.Email" placeholder="Your Email" required />
                        <span asp-validation-for="Contact.Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Message</label>
                        <textarea id="message" class="form-control" asp-for="Contact.Message" rows="4" placeholder="Your Message" required></textarea>
                        <span asp-validation-for="Contact.Message" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-dark w-100">Submit</button>
                </form>
            </div>
        </div>
            
            <div class="col-md-6">
                <h2>Contact Information</h2>
                <p class="mb-4">You can also reach us using the contact details below:</p>

                <div class="contact-details mb-4">
                    <i class="fa-solid fa-envelope"></i>
                    <h4>Email</h4>
                    <h6>
                        <a href="mailto:osamasalma143@gmail.com" class="text-decoration-none">osamasalma143@gmail.com</a>
                    </h6>
                </div>
                <div class="contact-details mb-4">
                    <i class="fa-solid fa-phone"></i>
                    <h4>Phone</h4>
                    <h6>012 72821919</h6>
                </div>
                <div class="contact-details mb-4">
                    <i class="fa-solid fa-map-marker-alt"></i>
                    <h4>Location</h4>
                    <h6>SIXT rent a car - Madinaty</h6>
                </div>

                
                <div class="map-container">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m26!1m12!1m3!1d221039.08342764323!2d31.370149887906297!3d30.044440117670195!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!4m11!3e6!4m3!3m2!1d29.9794432!2d31.440896!4m5!1s0x14581dd74fe06979%3A0x7af4a0b84dc09d5c!2sSIXT%20rent%20a%20car%20-%20Madinaty%D8%8C%20Open%20Air%20Mall%2C%20Second%20New%20Cairo%2C%20Cairo%20Governorate%204771203!3m2!1d30.107722799999998!2d31.6268034!5e0!3m2!1sen!2seg!4v1732277911640!5m2!1sen!2seg"
                            width="100%" height="100%" style="border: 0" allowfullscreen="" loading="lazy">
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</div>
    <section class="footer" style="background-color: black;">
        <div class="row">
            <div class="footer-content col-3">
                <img src="~/images/logos/yellow.jpg" width="85" height="70" alt="logo" style="margin-left: 100px; margin-top: 20px;">
            </div>
            <div class="footer-content col-3">
                <div class="icons">
                    <h4 style="color: azure;">Reach Us</h4>
                    <a href="https://www.facebook.com" class="icon facebook" style="display: block; margin-bottom: 10px;">
                        <i class='bx bxl-facebook-circle'></i>
                    </a>
                    <a href="https://www.telegram.com" class="icon telegram" style="display: block; margin-bottom: 10px;">
                        <i class='bx bxl-telegram'></i>
                    </a>
                    <a href="https://www.instagram.com" class="icon instagram" style="display: block; margin-bottom: 10px;">
                        <i class='bx bxl-instagram'></i>
                    </a>
                    <a href="https://www.truecaller.com" class="icon phone" style="display: block; margin-bottom: 10px;">
                        <i class='bx bxs-phone-call'></i>
                    </a>
                </div>
            </div>
            <div class="footer-content col-3">
                <h4 style="color: azure"> Car Models </h4>
                <li style="list-style-type: none;"><a asp-page="/SedanCars">Sedan</a></li>
                <li style="list-style-type: none;"><a asp-page="/SUVCars">SUV's</a></li>
                <li style="list-style-type: none;"><a asp-page="/Luxury">Luxury</a></li>
                <li style="list-style-type: none;"><a asp-page="/Economy">Economy</a></li>
                <li style="list-style-type: none;"><a asp-page="/4X4">4X4</a></li>
            </div>
        </div>
    </section>
   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        html, body {
            
            overflow-x: hidden;
        }

        .footer {
            display: grid;
            grid-template-columns: repeat(auto-fit,minmax(200px,auto));
        }

        .footer-content h4 {
            color: rgb(50, 52, 57);
            margin-bottom: 1.5rem;
            padding-top: 10px;
            font-size: 20px;
        }

        .footer-content li {
            margin-bottom: 8px;
        }

        .footer-content a {
            display: block;
            color: white;
            font-size: 15px;
            font-weight: 400;
            transition: all .40s ease;
        }

        .footer-content li a:hover {
            transform: translateY(-3px)translateX(-5px);
            color: rgb(51, 53, 50);
        }

        .icons i {
            font-size: 18px;
            padding: 2px;
            display: inline-block;
            font-size: 24px;
            background-color: white;
            border-radius: 50%;
            transition: transform 0.3s ease, color 0.3s ease;
        }


        .icon.facebook i {
            color: #1877F2;
        }

        .icon.telegram i {
            color: #0088CC;
        }

        .icon.instagram i {
            color: #E1306C;
        }

        .icon.phone i {
            color: #0077FF;
        }


        .icons a:hover i {
            transform: scale(1.1);
        }

        .nav-item a:hover {
            background: rgba(217, 191, 191, 0.759);
            border-style: none;
        }

        .nav-brand {
            margin-left: -100px;
        }

        body .navbar {
            padding: 10px 20px; /* Matches the other pages */
        }

</style>
</body>
</html>


