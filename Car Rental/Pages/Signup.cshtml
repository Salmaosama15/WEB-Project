@page
@model Car_Rental.Pages.SignupModel
@{
 ViewData["Title"] = "Signup - Car Rental";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
  
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-black">
        <div class="container">
            <a class="navbar-brand text-white fw-bold d-flex align-items-center" href="/">
                <img src="~/images/logos/yellow.jpg" alt="XRent Logo" style="width: 85px; height: 70px; margin-right: 8px;" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/Signup">Sign Up</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/AboutUs">About Us</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link text-white dropdown-toggle" role="button" data-bs-toggle="dropdown">Cars</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-page="/carspage">Main page</a></li>
                            <li><a class="dropdown-item" asp-page="/SedanCars">Sedan</a></li>
                            <li><a class="dropdown-item" asp-page="/SUVCars">SUV</a></li>
                            <li><a class="dropdown-item" asp-page="/LuxuryCars">Luxury</a></li>
                            <li><a class="dropdown-item" asp-page="/EconomyCars">Economy</a></li>
                            <li><a class="dropdown-item" asp-page="/4X4Cars">4X4</a></li>
                        </ul>
                    </li>
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/Contact">Contact Us</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/Privacy">Privacy</a></li>
                </ul>
            </div>
        </div>
    </nav>

<div class="signup-page">
    <div class="signup-container">
        <h2 class="text-center mb-4" ststyle="color: black; padding: 10px; border-radius: 5px;  text-align:center">Sign Up</h2>

            @if (Model.ErrorMessage != null && Model.ErrorMessage.Length > 0)
            {
                <div class="alert alert-warning">@Model.ErrorMessage</div>
            }

            @if (Model.SuccessMessage != null && Model.SuccessMessage.Length > 0)
            {
                <div class="alert alert-success" id="successMessage">@Model.SuccessMessage</div>
                <script>
                    setTimeout(function () {
                        window.location.href = "/carspage";
                    }, 3000); // Redirect after 3 seconds
                </script>
            }


        <form method="post" novalidate>
            <div class="form-group">
                <label asp-for="User.FirstName" class="form-label">First Name</label>
                <input asp-for="User.FirstName" class="form-control" placeholder="Enter your first name">
                <span asp-validation-for="User.FirstName" class="error-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="User.LastName" class="form-label">Last Name</label>
                <input asp-for="User.LastName" class="form-control" placeholder="Enter your last name">
                <span asp-validation-for="User.LastName" class="error-message"></span>
            </div>


            <div class="form-group">
                <label asp-for="User.Email" class="form-label">Email</label>
                <input asp-for="User.Email" class="form-control" placeholder="Enter your email">
                <span asp-validation-for="User.Email" class="error-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="User.Password" class="form-label">Password</label>
                <input asp-for="User.Password" type="password" class="form-control" placeholder="Enter your password">
                <span asp-validation-for="User.Password" class="error-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="User.ConfirmPassword" class="form-label">Confirm Password</label>
                <input asp-for="User.ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password">
                <span asp-validation-for="User.ConfirmPassword" class="error-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="User.PhoneNumber" class="form-label">Phone Number</label>
                <input asp-for="User.PhoneNumber" type="tel" class="form-control" placeholder="Enter your phone number">
                <span asp-validation-for="User.PhoneNumber" class="error-message"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-dark">Confrim</button>
            </div>

                <div class="text-center mt-3">
                    <p>Already have an account? <a asp-page="/Login">Log in</a></p>
                </div>
        </form>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>

<style>

    body, html 
    {
        margin: 0;
        padding: 0;
        height: 100%;
        overflow-y: auto;
        overflow-x:hidden;
    }

    .navbar 
    {
        position: fixed; 
        top: 0;
        width: 100%;
        z-index: 1000;
        padding: 1rem;
  
    }

    .nav-link 
    {
        color: white !important;
    }

    .signup-page 
    {
        padding-top: 100px; 
        background: url('/images/pics/5e9172640c492f0221ea1d5fdde99817.jpg') no-repeat center center fixed;
        background-size: cover;
        min-height: 100vh; 
        display: flex;
        justify-content: center;
        align-items: flex-start;
        font-family:'Times New Roman', Times, serif;
    }

    .signup-container 
    {
        background: rgba(255, 255, 255, 0.9);
        padding: 20px 30px;
        border-radius: 10px;
        max-width: 400px;
        width: 100%;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);

    }



    
    .form-heading 
    {
        text-align: center;
        font-size: 24px;
        margin-bottom: 20px;
        color: black;
        font-family:'Times New Roman', Times, serif;
        font-weight: bold;
    }

   
    .form-group 
    {
        margin-bottom: 20px;
    }

    .form-label 
    {
        display: block;
        font-size: 18px;
        color: black;
        margin-bottom: 5px;
        font-family:'Times New Roman', Times, serif;
    }

    .form-control 
    {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 14px;
        font-family:'Times New Roman', Times, serif;
    }

        .form-control:focus 
        {
            border-color: #007bff;
            box-shadow: 0 0 3px rgba(0, 123, 255, 0.5);
        }

   

    .btn 
    {
        width: 100%;
        padding: 10px;
        color: white;
        background-color:black;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        font-family:'Times New Roman', Times, serif;
    }



   

    .error-message 
    {
        color: red;
        font-size: 12px;
        margin-top: 5px;
        display: block;
        font-family:'Times New Roman', Times, serif;
    }

   

    .alert 
    {
        padding: 10px;
        margin-bottom: 15px;
        border-radius: 5px;
        font-size: 14px;
    }

    .alert-warning 
    {
        background-color: #f8d7da;
        color: #721c24;
    }

    .alert-success 
    {
        background-color: #d4edda;
        color: #155724;
    }

        .nav-item a:hover {
            background: rgba(217, 191, 191, 0.759);
            border-style: none;
        }

</style>
</body>

</html>




