@page
@model Car_Rental.Pages.SignupModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="Sign Up.css">
  
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-black">
        <div class="container">
            <a class="navbar-brand text-white fw-bold" href="/">Xrent</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/Signup">Sign Up</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/AboutUs">About Us</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link text-white dropdown-toggle" role="button" data-bs-toggle="dropdown">Cars</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-page="/carspage">Main page</a></li>
                            <li><a class="dropdown-item" asp-page="/SedanCars">Sedan</a></li>
                            <li><a class="dropdown-item" asp-page="/SUVCars">SUV</a></li>
                            <li><a class="dropdown-item" asp-page="/LuxuryCars">Luxury</a></li>
                            <li><a class="dropdown-item" asp-page="/EconomyCars">Economy</a></li>
                            <li><a class="dropdown-item" asp-page="/4X4Cars">4X4</a></li>
                        </ul>
                    </li>
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/Contact">Contact Us</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="#">Privacy</a></li>
                </ul>
            </div>
        </div>
    </nav>

<div class="signup-page">
    <div class="signup-container">
        <h2 class="text-center mb-4" style="background: black; color: white; padding: 10px; border-radius: 5px;  text-align:center">Sign Up</h2>

        @if (Model.ErrorMessage != null && Model.ErrorMessage.Length > 0)
        {
            <div class="alert alert-warning">@Model.ErrorMessage</div>
        }

        @if (Model.SuccessMessage != null && Model.SuccessMessage.Length > 0)
        {
            <div class="alert alert-success">@Model.SuccessMessage</div>
        }

        <form method="post" novalidate>
            <div class="form-group">
                <label asp-for="User.FirstName" class="form-label">First Name</label>
                <input asp-for="User.FirstName" class="form-control" placeholder="Enter your first name">
                <span asp-validation-for="User.FirstName" class="error-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="User.LastName" class="form-label">Last Name</label>
                <input asp-for="User.LastName" class="form-control" placeholder="Enter your last name">
                <span asp-validation-for="User.LastName" class="error-message"></span>
            </div>


            <div class="form-group">
                <label asp-for="User.Email" class="form-label">Email</label>
                <input asp-for="User.Email" class="form-control" placeholder="Enter your email">
                <span asp-validation-for="User.Email" class="error-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="User.Password" class="form-label">Password</label>
                <input asp-for="User.Password" type="password" class="form-control" placeholder="Enter your password">
                <span asp-validation-for="User.Password" class="error-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="User.ConfirmPassword" class="form-label">Confirm Password</label>
                <input asp-for="User.ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password">
                <span asp-validation-for="User.ConfirmPassword" class="error-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="User.PhoneNumber" class="form-label">Phone Number</label>
                <input asp-for="User.PhoneNumber" type="tel" class="form-control" placeholder="Enter your phone number">
                <span asp-validation-for="User.PhoneNumber" class="error-message"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-dark">Confrim</button>
            </div>
        </form>
    </div>
</div>

    <section class="footer" style="background-color: black;">
        <div class="row">
            <div class="footer-content col-3">
                <img src="seat.jpeg" width="75" height="75" alt="logo" style="margin-left: 100px; margin-top: 20px;">
            </div>
            <div class="footer-content col-3">
                <div class="icons">
                    <h4 style="color: azure;">Reach Us</h4>
                    <a href="https://www.facebook.com" style="display: block; margin-bottom: 10px;"><i class='bx bxl-facebook-circle'></i></a>
                    <a href="https://www.telegram.com" style="display: block; margin-bottom: 10px;"><i class='bx bxl-telegram'></i></a>
                    <a href="https://www.instagram.com" style="display: block; margin-bottom: 10px;"><i class='bx bxl-instagram'></i></a>
                    <a href="https://www.truecaller.com" style="display: block; margin-bottom: 10px;"><i class='bx bxs-phone-call'></i></a>

                </div>
            </div>
            <div class="footer-content col-3">
                <h4 style="color: azure"> Car Models </h4>
                <li style="list-style-type: none;"><a href="#">Sedan</a></li>
                <li style="list-style-type: none;"><a href="#">SUV's</a></li>
                <li style="list-style-type: none;"><a href="#">Luxury</a></li>
                <li style="list-style-type: none;"><a href="#">Economy</a></li>
                <li style="list-style-type: none;"><a href="#">4X4</a></li>
            </div>
        </div>
    </section>

</body>
<script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
<style>

    body, html {
        margin: 0;
        padding: 0;
        height: 100%;
        overflow-y: auto;
        overflow-x:hidden;/* Enable vertical scrolling */
    }

    .navbar {
        position: fixed; /* Fix navbar to the top */
        top: 0;
        width: 100%;
        z-index: 1000;
        padding: 1rem;
  
    }

    .nav-link {
        color: white !important;
    }

    .signup-page {
        padding-top: 100px; /* Add space to push content below the navbar */
        background: url('/images/5e9172640c492f0221ea1d5fdde99817.jpg') no-repeat center center fixed;
        background-size: cover;
        min-height: 100vh; /* Ensure full-page height for scroll */
        display: flex;
        justify-content: center;
        align-items: flex-start;
    }

    .signup-container 
    {
        background: rgba(255, 255, 255, 0.9);
        padding: 20px 30px;
        border-radius: 10px;
        max-width: 400px;
        width: 100%;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);

    }



    
    .form-heading 
    {
        text-align: center;
        font-size: 24px;
        margin-bottom: 20px;
        color: black;
        font-family:'Times New Roman', Times, serif;
        font-weight: bold;
    }

   
    .form-group 
    {
        margin-bottom: 20px;
    }

    .form-label 
    {
        display: block;
        font-size: 18px;
        color: black;
        margin-bottom: 5px;
        font-family:'Times New Roman', Times, serif;
    }

    .form-control 
    {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 14px;
        font-family:'Times New Roman', Times, serif;
    }

        .form-control:focus 
        {
            border-color: #007bff;
            box-shadow: 0 0 3px rgba(0, 123, 255, 0.5);
        }

   

    .btn 
    {
        width: 100%;
        padding: 10px;
        color: white;
        background-color:black;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        font-family:'Times New Roman', Times, serif;
    }



   

    .error-message 
    {
        color: red;
        font-size: 12px;
        margin-top: 5px;
        display: block;
        font-family:'Times New Roman', Times, serif;
    }

   

    .alert 
    {
        padding: 10px;
        margin-bottom: 15px;
        border-radius: 5px;
        font-size: 14px;
    }

    .alert-warning 
    {
        background-color: #f8d7da;
        color: #721c24;
    }

    .alert-success 
    {
        background-color: #d4edda;
        color: #155724;
    }

    .footer 
    {
        display: grid;
        grid-template-columns: repeat(auto-fit,minmax(200px,auto));
  
    }

    .footer-content h4 {
        color: rgb(50, 52, 57);
        margin-bottom: 1.5rem;
        padding-top: 10px;
        font-size: 20px;
    }

    .footer-content li {
        margin-bottom: 8px;
    }

    .footer-content a {
        display: block;
        color: white;
        font-size: 15px;
        font-weight: 400;
        transition: all .40s ease;
    }

    .footer-content li a:hover {
        transform: translateY(-3px)translateX(-5px);
        color: rgb(51, 53, 50);
    }

    .icons {
        display: inline-block;
        font-size: 22px;
        color: burlywood;
        margin-right: 17px;
        transition: all .40s ease;
    }

        .icons a:hover {
            transform: translateY(-5px)
        }

    .nav-item a:hover {
        background: rgba(217, 191, 191, 0.759);
        border-style: none;
    }

    .nav-brand {
        margin-left: -100px;
    }


</style>




