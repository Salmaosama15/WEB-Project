@page
@model Car_Rental.Pages.LoginModel
@{
    ViewData["Title"] = "Login - Car Rental";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <link rel="stylesheet" href="~/css/Login.css" />
   
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-black">
        <div class="container">
            <a class="navbar-brand text-white fw-bold d-flex align-items-center" href="/">
                <img src="~/images/logos/yellow.jpg" alt="XRent Logo" style="width: 85px; height: 70px; margin-right: 8px;" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/Signup">Sign Up</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/AboutUs">About Us</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link text-white dropdown-toggle" role="button" data-bs-toggle="dropdown">Cars</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-page="/carspage">Main page</a></li>
                            <li><a class="dropdown-item" asp-page="/SedanCars">Sedan</a></li>
                            <li><a class="dropdown-item" asp-page="/SUVCars">SUV</a></li>
                            <li><a class="dropdown-item" asp-page="/LuxuryCars">Luxury</a></li>
                            <li><a class="dropdown-item" asp-page="/EconomyCars">Economy</a></li>
                            <li><a class="dropdown-item" asp-page="/4X4Cars">4X4</a></li>
                        </ul>
                    </li>
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/Contact">Contact Us</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/Privacy">Privacy</a></li>
                </ul>
            </div>
        </div>
    </nav>


    <div class="login-container">
        <h2 class="login-title">Login</h2>

        @if (TempData["AlertMessage"] != null)
        {
            var message = TempData["AlertMessage"].ToString();
            var isSuccess = message.StartsWith("Success");

            <div class="alert @(isSuccess ? "alert-success" : "alert-danger")" role="alert" id="alertMessage">
                @message
            </div>

            if (isSuccess && TempData["RedirectUrl"] != null)
            {
                <script>
                    setTimeout(() => {
                        window.location.href = '@TempData["RedirectUrl"]';
                    }, 3000); // 3000ms = 3 seconds delay
                </script>
            }
        }


        <form method="post">
            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input type="email"
                       class="form-control"
                       id="email"
                       name="Email"
                       value="@Model.Email"
                       placeholder="Enter your email"
                       required />

            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password"
                       class="form-control"
                       id="password"
                       name="Password"
                       value="@Model.Password"
                       placeholder="Enter your password"
                       required />
            </div>
            <button type="submit" class="btn btn-dark w-100">Login</button>
        </form>


        <div class="text-center mt-3">
            <p>Don't have an account? <a asp-page="/Signup">Sign up</a></p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>



</body>
</html>
