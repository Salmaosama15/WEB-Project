@page
@model Car_Rental.Pages.EconomyCarsModel
@{
    ViewData["Title"] = "Economy cars - Car Rental";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Economy Cars</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <link rel="stylesheet" href="~/css/EconomyCars.css" />
    <script src="~/js/cars.js"></script>
 
</head>
<body>
   
    <nav class="navbar navbar-expand-lg navbar-light bg-black">
        <div class="container">
            <a class="navbar-brand text-white fw-bold d-flex align-items-center" href="/">
                <img src="~/images/logos/yellow.jpg" alt="XRent Logo" style="width: 85px; height: 70px; margin-right: 8px;" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/Signup">Sign Up</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/AboutUs">About Us</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link text-white dropdown-toggle" role="button" data-bs-toggle="dropdown">Cars</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-page="/carspage">Main page</a></li>
                            <li><a class="dropdown-item" asp-page="/SedanCars">Sedan</a></li>
                            <li><a class="dropdown-item" asp-page="/SUVCars">SUV</a></li>
                            <li><a class="dropdown-item" asp-page="/LuxuryCars">Luxury</a></li>
                            <li><a class="dropdown-item" asp-page="/EconomyCars">Economy</a></li>
                            <li><a class="dropdown-item" asp-page="/4X4Cars">4X4</a></li>
                        </ul>
                    </li>
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/Contact">Contact Us</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/Privacy">Privacy</a></li>
                </ul>
            </div>
        </div>
    </nav>



    <div class="container">
        <h2 class="text-center mt-4">Economy Cars</h2>

        <div class="row">

            <div class="col-md-4">
                <label for="price-range">Select Price Range:</label>
                <select id="price-range" class="form-select">
                    <option value="all">All Prices</option>
                    <option value="low">0 - 500,000 EGP</option>
                </select>
            </div>

            <div class="col-md-4">
                <label for="origin-select">Select Car Origin:</label>
                <select id="origin-select" class="form-select">
                    <option value="all">All Origins</option>
                    <option value="japanese">Japanese</option>
                    <option value="french">French</option>
                    <option value="korean">Korean</option>
                </select>
            </div>


            <div class="row mt-4" id="car-list">
                <div class="col-md-4 car-item" data-price="low" data-origin="japanese">
                    <div class="card">
                        <img src="/images/Economy/Nissan-Sunny_05-736621.jpg" class="card-img-top" alt="Economy Car 1">
                        <div class="card-body">
                            <h4 class="card-title">Nissan Sunny</h4>
                            <p class="card-text">Compact, reliable, and perfect for city driving.</p>
                            <p><strong>Colour:White</strong></p>
                            <p class="price">300,000EGP</p>
                            <a asp-page="/Booking" class="btn btn-dark">Book Now</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 car-item" data-price="low" data-origin="french">
                    <div class="card">
                        <img src="/images/Economy/0e5f700470be435c5958b3ef5db6ac3d.jpg" class="card-img-top" alt="Economy Car 2">
                        <div class="card-body">
                            <h4 class="card-title">Renault Logan</h4>
                            <p class="card-text">Spacious interior with exceptional fuel efficiency.</p>
                            <p><strong>Colour:Red</strong></p>
                            <p class="price">350,000EGP</p>
                            <a asp-page="/Booking" class="btn btn-dark">Book Now</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 car-item"  data-price="low" data-origin="korean">
                    <div class="card">
                        <img src="/images/Economy/dc3c34378557cdebb0b3a08ab2ca0308.jpg" class="card-img-top" alt="Economy Car 3">
                        <div class="card-body">
                            <h4 class="card-title">Chevrolet Optra</h4>
                            <p class="card-text">Stylish and fuel-efficient for budget-conscious drivers.</p>
                            <p><strong>Colour:Red</strong></p>
                            <p class="price">290,000EGP</p>
                            <a asp-page="/Booking" class="btn btn-dark">Book Now</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 car-item"  data-price="low" data-origin="korean">
                    <div class="card">
                        <img src="/images/Economy/01a71a35f4b14677861c89983609e7ed.jpg" class="card-img-top" alt="Kia Rio">
                        <div class="card-body">
                            <h4 class="card-title">Kia Rio</h4>
                            <p class="card-text">Affordable and reliable with excellent handling.</p>
                            <p><strong>Colour:Blue</strong></p>
                            <p class="price">320,000EGP</p>
                            <a asp-page="/Booking" class="btn btn-dark">Book Now</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 car-item"  data-price="low" data-origin="japanese">
                    <div class="card">
                        <img src="/images/Economy/a74a5622e7bfaaeb834f7c9f934611d8.jpg" class="card-img-top" alt="Mitsubishi Mirage">
                        <div class="card-body">
                            <h4 class="card-title">Mitsubishi Mirage</h4>
                            <p class="card-text">Compact design with impressive fuel efficiency.</p>
                            <p><strong>Colour:Black</strong></p>
                            <p class="price">280,000EGP</p>
                            <a asp-page="/Booking" class="btn btn-dark">Book Now</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 car-item" data-price="low" data-origin="japanese">
                    <div class="card">
                        <img src="/images/Economy/7917851946d94b89d80e0d27179ce5aa.jpg" class="card-img-top" alt="Toyota Yaris">
                        <div class="card-body">
                            <h4 class="card-title">Toyota Yaris</h4>
                            <p class="card-text">Stylish, compact, and highly efficient.</p>
                            <p><strong>Colour:Silver</strong></p>
                            <p class="price">340,000EGP</p>
                            <a asp-page="/Booking" class="btn btn-dark">Book Now</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 car-item" data-price="low" data-origin="japanese">
                    <div class="card">
                        <img src="/images/Economy/80c5eddb182319e6ca8502804b3eca02.jpg" class="card-img-top" alt="Honda Fit">
                        <div class="card-body">
                            <h4 class="card-title">Honda Fit</h4>
                            <p class="card-text">Spacious interior in a compact and efficient package.</p>
                            <p><strong>Colour:White</strong></p>
                            <p class="price">330,000EGP</p>
                            <a asp-page="/Booking" class="btn btn-dark">Book Now</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 car-item"  data-price="low" data-origin="japanese">
                    <div class="card">
                        <img src="/images/Economy/dad8cffb097797df0ef6c6d7bdc55393.jpg" class="card-img-top" alt="Suzuki Swift">
                        <div class="card-body">
                            <h4 class="card-title">Suzuki Swift</h4>
                            <p class="card-text">Lightweight, fun to drive, and budget-friendly.</p>
                            <p><strong>Colour:Silver</strong></p>
                            <p class="price">310,000EGP</p>
                            <a asp-page="/Booking" class="btn btn-dark">Book Now</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="description-section">
                <p>
                    Economy cars are designed to offer maximum value without compromising on efficiency or reliability.
                    They are perfect for budget-conscious buyers and those seeking an affordable and practical solution for daily commuting.
                    Economy cars are compact, lightweight, and equipped with fuel-efficient engines, making them cost-effective and environmentally friendly.
                    Despite their lower price points, many models now include modern features such as infotainment systems, advanced safety technologies, and comfortable interiors.
                    Economy cars are ideal for first-time buyers, students, or anyone looking for a dependable and affordable ride.
                </p>
            </div>

            <div class="text-center mt-4" style="padding-bottom:20px;">
                <a asp-page="/carspage" class="btn btn-dark">Back to Categories</a>
            </div>
        </div>
       </div>
    <section class="footer" style="background-color: black;">
        <div class="row">
            <div class="footer-content col-3">
                <img src="~/images/logos/yellow.jpg" width="85" height="70" alt="logo" style="margin-left: 100px; margin-top: 20px;">
            </div>
            <div class="footer-content col-3">
                <div class="icons">
                    <h4 style="color: azure;">Reach Us</h4>
                    <a href="https://www.facebook.com" class="icon facebook" style="display: block; margin-bottom: 10px;">
                        <i class='bx bxl-facebook-circle'></i>
                    </a>
                    <a href="https://www.telegram.com" class="icon telegram" style="display: block; margin-bottom: 10px;">
                        <i class='bx bxl-telegram'></i>
                    </a>
                    <a href="https://www.instagram.com" class="icon instagram" style="display: block; margin-bottom: 10px;">
                        <i class='bx bxl-instagram'></i>
                    </a>
                    <a href="https://www.truecaller.com" class="icon phone" style="display: block; margin-bottom: 10px;">
                        <i class='bx bxs-phone-call'></i>
                    </a>
                </div>
            </div>
            <div class="footer-content col-3">
                <h4 style="color: azure"> Car Models </h4>
                <li style="list-style-type: none;"><a asp-page="/SedanCars">Sedan</a></li>
                <li style="list-style-type: none;"><a asp-page="/SUVCars">SUV's</a></li>
                <li style="list-style-type: none;"><a asp-page="/Luxury">Luxury</a></li>
                <li style="list-style-type: none;"><a asp-page="/Economy">Economy</a></li>
                <li style="list-style-type: none;"><a asp-page="/4X4">4X4</a></li>
            </div>
        </div>
    </section>

</body>
</html>
