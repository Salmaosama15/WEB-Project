@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Xrent | Car Rental</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="styles.css">
    <style>
       
        .hero-section 
        {
            background-image: url('/images/home.jpg'); 
            background-size: cover;
            background-position: center;
            height: 100vh; 
            position: relative;
        }

        .overlay 
        {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5); 
            z-index: 1;
        }

        .hero-content 
        {
            position: relative;
            z-index: 2;
            top: 50%;
            transform: translateY(-50%);
        }

        .navbar 
        {
            z-index: 3;
        }
    </style>
</head>
<body>
    <header class="hero-section">
        <div class="overlay"></div>
        <nav class="navbar navbar-expand-lg navbar-light bg-transparent">
            <div class="container">
                <a class="navbar-brand text-white fw-bold" href="/">XRent</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link text-white" asp-page="/Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-page="/Signup">Sign Up</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-page="/AboutUs">About Us</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white dropdown-toggle" role="button" data-bs-toggle="dropdown">Cars</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-page="/carspage">Main page</a></li>
                                <li><a class="dropdown-item" asp-page="/SedanCars">Sedan</a></li>
                                <li><a class="dropdown-item" asp-page="/SUVCars">SUV</a></li>
                                <li><a class="dropdown-item" asp-page="/LuxuryCars">Luxury</a></li>
                                <li><a class="dropdown-item" asp-page="/EconomyCars">Economy</a></li>
                                <li><a class="dropdown-item" asp-page="/4X4Cars">4X4</a></li>
                            </ul>
                        </li>
                        <li class="nav-item"><a class="nav-link text-white" asp-page="/Contact">Contact Us</a></li>
                        <li class="nav-item"><a class="nav-link text-white" href="#">Privacy</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container text-center hero-content">
            <h1 class="display-4 text-white fw-bold">Xrent is always with you</h1>
            <p class="lead text-white">Enjoy our premium car rental & limousine services in Egypt.</p>
            <p class="text-white">Are you looking for a reliable and professional high-end service? Look no further!</p>
            <div>
                <a asp-page="/Login" class="btn btn-warning btn-lg me-2">Book Now</a>
                <a href="#" class="btn btn-outline-light btn-lg">Contact Us</a>
            </div>
        </div>
    </header>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        html, body {
            overflow-x: hidden;
        }

        .footer {
            display: grid;
            grid-template-columns: repeat(auto-fit,minmax(200px,auto));
        }

        .footer-content h4 {
            color: rgb(50, 52, 57);
            margin-bottom: 1.5rem;
            padding-top: 10px;
            font-size: 20px;
        }

        .footer-content li {
            margin-bottom: 8px;
        }

        .footer-content a {
            display: block;
            color: white;
            font-size: 15px;
            font-weight: 400;
            transition: all .40s ease;
        }

        .footer-content li a:hover {
            transform: translateY(-3px)translateX(-5px);
            color: rgb(51, 53, 50);
        }

        .icons {
            display: inline-block;
            font-size: 22px;
            color: burlywood;
            margin-right: 17px;
            transition: all .40s ease;
        }

            .icons a:hover {
                transform: translateY(-5px)
            }

        .nav-item a:hover {
            background: rgba(217, 191, 191, 0.759);
            border-style: none;
        }

        .nav-brand {
            margin-left: -100px;
        }
    </style>
</body>
</html>
