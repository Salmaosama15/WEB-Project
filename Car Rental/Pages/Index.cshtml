@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Xrent | Car Rental</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Index.css">
    
</head>
<body>
    <header class="hero-section">
        <div class="overlay"></div>
        <nav class="navbar navbar-expand-lg navbar-light bg-transparent">
            <div class="container">
                <img src="~/images/logos/yellow.jpg" alt="XRent Logo" style="width: 85px; height: 70px; margin-right: 8px;" />
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link text-white" asp-page="/Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-page="/Signup">Sign Up</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-page="/AboutUs">About Us</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white dropdown-toggle" role="button" data-bs-toggle="dropdown">Cars</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-page="/carspage">Main page</a></li>
                                <li><a class="dropdown-item" asp-page="/SedanCars">Sedan</a></li>
                                <li><a class="dropdown-item" asp-page="/SUVCars">SUV</a></li>
                                <li><a class="dropdown-item" asp-page="/LuxuryCars">Luxury</a></li>
                                <li><a class="dropdown-item" asp-page="/EconomyCars">Economy</a></li>
                                <li><a class="dropdown-item" asp-page="/4X4Cars">4X4</a></li>
                            </ul>
                        </li>
                        <li class="nav-item"><a class="nav-link text-white" asp-page="/Contact">Contact Us</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-page="/Privacy">Privacy</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container text-center hero-content">
            <h1 class="display-4 text-white fw-bold">Xrent is always with you</h1>
            <p class="lead text-white">Enjoy our premium car rental & limousine services in Egypt.</p>
            <p class="text-white">Are you looking for a reliable and professional high-end service? Look no further!</p>
            <div>
                <a asp-page="/Signup" class="btn btn-warning btn-lg me-2">Book Now</a>
                <a asp-page="/Contact" class="btn btn-outline-light btn-lg">Contact Us</a>
            </div>
        </div>
    </header>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

    

</body>
</html>
